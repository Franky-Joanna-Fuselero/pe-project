{% from 'components/core/show-header' import show_header %}
{% import 'components/core/forms' as forms %}
{% set num_lines = 4 %}

<div class="flex flex-col p-4 flex-1">
    {{ show_header('Identification') }}
    <div class="flex gap-x-32 justify-between w-full">
        <div class="flex flex-col gap-y-4 w-full">
            {{ forms.form_field(
                label:forms.label(
                    id:'1', 
                    content:'Line 1', 
                    attributes:{
                        'class':'whitespace-nowrap text-sm/6 font-medium text-gray-900'}
                    ),
                input:forms.text(
                    name:'1', 
                    values:values, 
                    attributes:{
                        'class':'flex-1 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                        'required':true
                    })
            )}}
            {{ forms.form_field(
                label:forms.label(
                    id:'2', 
                    content:'Line 2', 
                    attributes:{
                        'class':'whitespace-nowrap text-sm/6 font-medium text-gray-900'}
                    ),
                input:forms.text(
                    name:'2', 
                    values:values, 
                    attributes:{
                        'class':'flex-1 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                    })
            )}}
            {{ forms.form_field(
                label:forms.label(
                    id:'3', 
                    content:'Line 3', 
                    attributes:{
                        'class':'whitespace-nowrap text-sm/6 font-medium text-gray-900'}
                    ),
                input:forms.text(
                    name:'3', 
                    values:values, 
                    attributes:{
                        'class':'flex-1 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                    })
            )}}
            {{ forms.form_field(
                label:forms.label(
                    id:'4', 
                    content:'Line 4', 
                    attributes:{
                        'class':'whitespace-nowrap text-sm/6 font-medium text-gray-900'}
                    ),
                input:forms.text(
                    name:'4', 
                    values:values, 
                    attributes:{
                        'class':'flex-1 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                    })
            )}}

            <span id="swap"></span>
        </div>
        <div class="flex flex-1/2 flex-col gap-y-4 w-full">
            {{ forms.form_field(
                label:forms.label(
                    id:'solution', 
                    content:'Solution', 
                    attributes:{
                        'class':'whitespace-nowrap text-sm/6 font-medium text-gray-900'}
                    ),
                input:forms.text(
                    name:'solution', 
                    values:values, 
                    attributes:{
                        'class':'flex-1 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                    })
            )}}
            <span class="text-xs font-semibold text-gray-600 italic mb-2">For multiple Solutions please separate by spaces.</span>
            <button 
                type="button" 
                class="cursor-pointer bg-white border-1 border-gray-600 text-gray-900 hover:bg-gray-600 hover:text-white duration-300 rounded-lg px-2 py-2 font-semibold text-sm"
                hx-get="/questions/create/add-item" 
                hx-target="#swap"
                hx-swap="beforebegin"
                >
                Add more Items
            </button>
        </div>
    </div>
</div>  

