{% from 'components/core/show-nav-item' import show_nav_item %}
{% from 'components/core/breadcrumbs' import breadcrumb %}
{% from 'components/core/show-header' import show_header %}
{% from 'components/core/show-item' import show_item %}


{% extends 'components/core/faculty-layout' %}

{% block content %}
{{ breadcrumb() }}

<div class="flex flex-1 flex-col gap-y-4">
    <div class="flex flex-col max-w-full mx-8 rounded-xl bg-white p-4 shadow-sm ring-1 ring-gray-950/5">
            {{ show_header('Exam Name') }}  
    </div>  
    <div class="flex flex-1">
        <div class="flex mx-8">
            <a href="/exams/exam.id/question.id/mcq-example" class="p-2 max-h-fit bg-orange-500 rounded-lg font-medium text-white hover:bg-orange-400 hover:text-gray-50 cursor-pointer">Take Exam</a>
        </div>
        <div class="flex flex-col ml-auto max-w-full justify-between gap-y-4 mr-8 rounded-xl bg-white p-4 shadow-sm ring-1 ring-gray-950/5">
            {{ show_item('Course', 'Course name')}}
            {{ show_item('Max Score', '00')}}
            {{ show_item('Duration', '90 minutes')}}
            {{ show_item('Examination Date', "Examination date") }}
            {{ show_item('Retakes', 'Unlimited')}}
            {{ show_item('Open?', 'False')}}
        </div>   
    </div>
   
</div>

{% endblock %}