                <li class="flex justify-between p-1 group"><a href="#">{{ show_item(loop.index, question|replace({'_': ' '})|lower|capitalize, label_attributes:'group-hover:text-blue-900 duration', value_attributes:'group-hover:text-blue-900 duration group-hover:underline')}}</a></li>
                {% endfor %}
            </ul>
        </div>
            {{ show_header('') }}
            <a href="#" class="flex gap-x-4">{{ show_item('Submit')}}<span>‚ùó</span></a>
    </div>  

</div>

