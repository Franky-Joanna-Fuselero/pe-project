{% from 'components/core/breadcrumbs' import breadcrumb %}
{% from 'components/core/index-table' import table %}
{% extends 'components/core/base' %}

{% set headers = ['ID', 'Subject', 'Topic', 'Name', 'Type', 'Author', 'Date Created'] %}
{% set rows = [
    ['1', 'Computer Programming 1', 'Functions', 'What is the correct way to create a function in javaWhat is the correct way to create a function in javaWhat is the correct way to create a function in java?', 'Multiple Choice', 'Author_name', '04-19-2025'],
