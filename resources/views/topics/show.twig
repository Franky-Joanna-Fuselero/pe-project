{% from 'components/core/show-nav-item' import show_nav_item %}
{% from 'components/core/breadcrumbs' import breadcrumb %}
{% from 'components/core/show-header' import show_header %}
{% from 'components/core/show-item' import show_item %}
{% from 'components/core/index-table' import table %}


{% extends 'components/core/faculty-layout' %}

{% block content %}

{{ breadcrumb() }}
<div class="flex flex-col mx-4 pl-4">
    <h1 class="font-bold text-4xl">{{ topic.name }}</h1>
    <div class="flex flex-col pt-1 gap-y-0.5">
        <a href="/subjects/{{ topic.subject.id }}">
            <span class="pl-2 text-xs text-gray-400 font-semibold hover:text-blue-900 hover:underline duration-150">Subject : {{ topic.subject.name }}</span>
        </a>
        <span class="pl-2 text-xs text-gray-400 font-semibold">Course : {{ topic.subject.course.abbreviation }}</span>
        <span class="pl-2 text-xs text-gray-400 font-semibold">ID : {{ topic.id }}</span>
    </div>
</div>

<div class="flex flex-1 flex-col gap-y-4">
    <div class="flex max-w-full gap-x-4 overflow-x-auto mx-auto rounded-xl bg-white p-2 shadow-sm ring-1 ring-gray-950/5 ">
        {{ show_nav_item('/topics/'~topic.id, 
                        '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5">
                            <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                            <path fill-rule="evenodd" d="M1.323 11.447C2.811 6.976 7.028 3.75 12.001 3.75c4.97 0 9.185 3.223 10.675 7.69.12.362.12.752 0 1.113-1.487 4.471-5.705 7.697-10.677 7.697-4.97 0-9.186-3.223-10.675-7.69a1.762 1.762 0 0 1 0-1.113ZM17.25 12a5.25 5.25 0 1 1-10.5 0 5.25 5.25 0 0 1 10.5 0Z" clip-rule="evenodd" />
                        </svg>',
                        'View') }}
                        {% if can('update topics') %}
        {{ show_nav_item('/topics/'~topic.id~'/edit', 
                        '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5">
                            <path d="M21.731 2.269a2.625 2.625 0 0 0-3.712 0l-1.157 1.157 3.712 3.712 1.157-1.157a2.625 2.625 0 0 0 0-3.712ZM19.513 8.199l-3.712-3.712-12.15 12.15a5.25 5.25 0 0 0-1.32 2.214l-.8 2.685a.75.75 0 0 0 .933.933l2.685-.8a5.25 5.25 0 0 0 2.214-1.32L19.513 8.2Z" />
                        </svg>',
                        'Edit') }}
                        {% endif %}
    </div>

    <div class="flex max-w-full mx-8 rounded-xl bg-white px-2 shadow-sm ring-1 overflow-visible ring-gray-950/5">
        <div class="flex flex-col p-4 flex-1">
            {{ show_header('Details') }}
            <div class="flex justify-between">
                <div class="flex flex-col gap-y-4">
                    {{ show_item('Name', topic.name)}}
                    {{ show_item('Current No. of Questions', topic.questions.count() )}}
                    {{ show_item('Author', topic.createdBy.getFullName())}}
                </div>
            </div>
        </div>  
    </div>
    <div class="mx-8">
        <div class="flex justify-between items-center w-full h-16 p-6 bg-white border-x border-t border-gray-300 rounded-t-2xl">
            <span class="text-2xl font-semibold text-gray-900">Questions in this Topic</span>
            <span>Filter here</span>
        </div>
        <div class="overflow-auto max-w-full scroll-smooth border-x border-t border-gray-300">
            {{ table(headers,rows:rows, url:'questions') }}

        </div>
        <div class="flex justify-end items-center w-full h-16 p-6 bg-white border-x border-b border-gray-300 rounded-b-2xl">
            <span>Pagination</span>
        </div>
    </div>
</div>

{% endblock %}