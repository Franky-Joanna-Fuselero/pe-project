<a href="{{ route('exams.student.show', {exam:exam})}}">
<div class="relative flex flex-col bg-white shadow-sm drop-shadow-xl border border-slate-200 rounded-lg w-80 hover:bg-blue-900 group duration-300">     
    <div class="mx-3 mb-0 border-b border-slate-200 pt-3 pb-2 px-1 flex justify-between">
        <span class="text-xs font-semibold text-slate-600 group-hover:text-blue-50/75">
            Exam ID: {{ exam.id }}
        </span>
        <span class="text-xs text-slate-600 font-semibold group-hover:text-blue-50/75">
            Course: BSCS
        </span>
    </div>

    <div class="p-4">
        <h5 class="mb-2 text-slate-800 text-xl font-bold group-hover:text-white">
            {{ exam.name }}
        </h5>

        <p class="text-xs text-slate-600 leading-normal group-hover:text-white">
            Maximum Score: {{ exam.max_score }}
        </p>

    </div>
    <div class="mx-3 border-t border-slate-200 pb-3 pt-2 px-1 flex justify-between">
        <span class="text-xs font-medium {{ exam.is_published ? 'text-green-600 group-hover:text-green-300' : 'text-orange-600 group-hover:text-orange-300' }}">
            Status: {{ exam.is_published ? 'Published' : 'On Maintenance'}}
        </span>

        <span class="text-xs text-slate-600 font-medium group-hover:text-blue-50/75">
            Exam Date: {{ exam.examination_date ?: 'Anytime'}}
        </span>
    </div>
 
</div>
   </a>