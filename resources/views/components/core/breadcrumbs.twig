{% macro breadcrumb() %}
    {% set path = app.request.pathInfo %}
    {% set breadcrumbs = [] %}
    {% set breadcrumbs = breadcrumbs|merge([{'label': 'Home', 'url': '/' }]) %}
    {% set path_parts = path | split('/') %}
    {% set current_url = '' %}

    {% for part in path_parts %}
        {% if part != '' %}
            {% set current_url = current_url ~ '/' ~ part %}
            {% set breadcrumbs = breadcrumbs|merge([{'label': part|capitalize, 'url': current_url }]) %}
        {% endif %}
    {% endfor %}

    <div>
        <nav aria-label="breadcrumb" class="w-max">
            <ol class="flex w-full flex-wrap items-center rounded-md bg-slate-50 px-4 py-2 m-2">
                <li class="flex cursor-pointer items-center text-sm text-slate-500 transition-colors duration-300 hover:text-slate-800">
                    <a href="/">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-4 w-4">
                        <path d="M11.47 3.841a.75.75 0 0 1 1.06 0l8.69 8.69a.75.75 0 1 0 1.06-1.061l-8.689-8.69a2.25 2.25 0 0 0-3.182 0l-8.69 8.69a.75.75 0 1 0 1.061 1.06l8.69-8.689Z" />
                        <path d="m12 5.432 8.159 8.159c.03.03.06.058.091.086v6.198c0 1.035-.84 1.875-1.875 1.875H15a.75.75 0 0 1-.75-.75v-4.5a.75.75 0 0 0-.75-.75h-3a.75.75 0 0 0-.75.75V21a.75.75 0 0 1-.75.75H5.625a1.875 1.875 0 0 1-1.875-1.875v-6.198a2.29 2.29 0 0 0 .091-.086L12 5.432Z" />
                        </svg>
                    </a>
                    <span class="pointer-events-none mx-2 text-slate-800">
                        /
                    </span>
                </li>

            {% for breadcrumb in breadcrumbs %}
                <li class="text-slate-500 text-sm transition-colors duration-300 hover:text-slate-800 font-semibold">
                    {% if loop.last %}
                        <span >{{ breadcrumb.label }}</span> 
                    {% elseif not loop.first %}
                        <a href="{{ breadcrumb.url }}">{{ breadcrumb.label }}</a>
                        <span class="mx-2" > / </span> {# Separator between items #}
                    {% endif %}
                </li>
            {% endfor %}    
            </ol>
        </nav>
        <h1 class="font-bold text-4xl m-4 p-2">Examination Management System</h1>
    </div>
{% endmacro %}
