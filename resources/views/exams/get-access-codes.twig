<tbody  hx-get="/exams/{{ exam.id }}/edit/get_access_codes"
        hx-trigger="mouseenter, click[event.target.id === 'save-access-code-button'] from:body"
        hx-target="this"
        hx-swap="outerHTML"
        hx-sync="#save-access-code-button">
{% for code in access_codes %}
    <tr class="border-t border-gray-900/10 text-center hover:bg-blue-50">
        <td 
            class="px-4 py-2 font-mono cursor-pointer select-all">
            {{ code.access_code }}
        </td>
    </tr>
{% endfor %}
</tbody>